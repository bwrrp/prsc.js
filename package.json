{
	"name": "prsc",
	"version": "1.1.0",
	"description": "Tiny parser combinators library",
	"author": "Stef Busking",
	"license": "MIT",
	"keywords": [
		"parser",
		"combinators"
	],
	"main": "dist/prsc.js",
	"module": "dist/prsc.mjs",
	"scripts": {
		"build:clean": "rimraf dist && rimraf lib && rimraf temp",
		"build:bundle": "tsc -P tsconfig.build.json && rollup -c",
		"build:api": "api-extractor run",
		"build:api-copy": "copyfiles --flat temp/* api",
		"build:docs": "api-documenter markdown -i api -o docs",
		"build": "npm-run-all build:clean build:bundle build:api build:api-copy build:docs",
		"prepare": "npm run build",
		"test": "jest --coverage --verbose"
	},
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/bwrrp/prsc.js"
	},
	"devDependencies": {
		"@microsoft/api-documenter": "^7.8.56",
		"@microsoft/api-extractor": "^7.9.22",
		"@types/jest": "^26.0.14",
		"copyfiles": "^2.3.0",
		"jest": "^26.4.2",
		"mkdirp": "^1.0.4",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.1.2",
		"rimraf": "^3.0.2",
		"rollup": "^2.28.2",
		"rollup-plugin-sourcemaps": "^0.6.2",
		"rollup-plugin-terser": "^7.0.2",
		"ts-jest": "^26.4.0",
		"typescript": "^4.0.3"
	},
	"jest": {
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(\\.(tests))\\.(tsx?|jsx?)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"json",
			"jsx"
		],
		"collectCoverageFrom": [
			"src/**/*.ts"
		]
	},
	"prettier": {
		"printWidth": 100,
		"singleQuote": true,
		"tabWidth": 4,
		"useTabs": true
	}
}
