{
	"name": "prsc",
	"version": "0.1.0",
	"description": "Tiny parser combinators library",
	"author": "Stef Busking",
	"license": "MIT",
	"keywords": [
		"parser",
		"combinators"
	],
	"main": "dist/prsc.js",
	"module": "dist/prsc.mjs",
	"scripts": {
		"build:clean": "rimraf dist && rimraf lib",
		"build:dirs": "mkdirp lib",
		"build:bundle": "tsc -P tsconfig.build.json && rollup -c",
		"build": "npm-run-all build:clean build:dirs build:bundle",
		"prepare": "npm run build",
		"test": "jest --coverage --verbose"
	},
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/bwrrp/prsc.js"
	},
	"devDependencies": {
		"@types/jest": "^24.0.19",
		"jest": "^24.9.0",
		"mkdirp": "^0.5.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.18.2",
		"rimraf": "^3.0.0",
		"rollup": "^1.25.1",
		"rollup-plugin-sourcemaps": "^0.4.2",
		"rollup-plugin-terser": "^5.1.2",
		"ts-jest": "^24.1.0",
		"typescript": "^3.6.4"
	},
	"jest": {
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(\\.(tests))\\.(tsx?|jsx?)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"json",
			"jsx"
		],
		"collectCoverageFrom": [
			"src/**/*.ts"
		]
	},
	"prettier": {
		"printWidth": 100,
		"singleQuote": true,
		"tabWidth": 4,
		"useTabs": true
	}
}
